<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculaterConverter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="calculator_button" parent="">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">77dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">36sp</item>
    </style>


    <style name="equalButton" parent="">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">164dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">@string/equal</item>
        <item name="android:background">@drawable/boutton_equal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textView" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space16</item>
        <item name="android:gravity">right</item>
        <item name="android:text">@string/result</item>
        <item name="android:textSize">20dp</item>
    </style>

